// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String  @id @default(cuid())
  name          String?
  alias         String?
  passphrase    String?
  email         String?   @unique
}

model Contact {
  id            String  @id @default(cuid())
  firstname     String
  lastname      String
  email         String
  avatar        String?
}